---
import i18next from 'i18next';
const lang = i18next.language;

const translation: any = {
  en: {
    description:
      'Get an extraordinary experience in high quality fresh seafood products. Contact us now.',
    button: 'Contact Us'
  },
  id: {
    description:
      'Dapatkan pengalaman luar biasa dalam produk laut segar berkualitas tinggi. Hubungi kami sekarang.',
    button: 'Hubungi Kami'
  }
};
---

<div class="position-relative">
  <div class="centered-div" style="z-index: 2;">
    <div class="d-flex flex-column align-items-center" style="gap: 20px;">
      <h1
        class="fw-bolder text-white text-center"
        style="font-size: 40px; font-family: 'Playfair Display', serif;"
      >
        PREMIUM SEAFOOD <br />
        <span style="font-size: 50px;">SUPPLIERS</span>
      </h1>
      <div
        class="body-content text-center text-white"
        style="max-width: 600px;"
      >
        {translation[lang].description}
      </div>
      <script>
        import { gotoElementByIdAdjusted } from '../../utils/scroll';
        function handleClick() {
          gotoElementByIdAdjusted('contact-section', 100);
        }
        // @ts-ignore
        document
          .getElementById('button-contact-header')
          .addEventListener('click', handleClick);
      </script>

      <button class="btn button-header" id="button-contact-header"
        >{translation[lang].button}</button
      >
    </div>
  </div>

  <div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="1"
        aria-label="Slide 2"></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="2"
        aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="https://iili.io/J9WroQf.jpg"
          class="d-block w-100 carousel-image"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://iili.io/J9Wr2rN.jpg"
          class="d-block w-100 carousel-image"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://iili.io/J9Wrd1p.jpg"
          class="d-block w-100 carousel-image"
          alt="..."
        />
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>

<style is:global>
  .carousel-image {
    filter: brightness(50%);
    max-height: 70vh;
    object-fit: cover;
  }

  .button-header {
    background-color: #0077b6;
    color: white;
  }

  .button-header:hover {
    background-color: #0077b6;
    color: white;
  }
</style>
