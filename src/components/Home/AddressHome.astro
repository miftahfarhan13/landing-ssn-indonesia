---
import i18next from 'i18next';
const lang = i18next.language;

const translation: any = {
  en: {
    title: 'Contact Us'
  },
  id: {
    title: 'Hubungi Kami'
  }
};
---

<section class="bg-dark background-footer">
  <div
    class="container row align-items-center mx-auto p-4 p-md-6 rounded rounded-5"
  >
    <!-- Contact Information -->
    <div class="col-12 col-lg-6 d-flex flex-column text-white">
      <h2 class="text-white">{translation[lang].title}</h2>
      <span
        ><span class="fw-bolder">Address:</span> Karang Anyar Pantai, Tarakan
        Barat, Tarakan City, North Kalimantan</span
      >
      <span><span class="fw-bolder">Phone:</span> +(62)812-4605-9191</span>
      <span><span class="fw-bolder">Email:</span> ssn@gmail.com</span>
      <span>
        <span class="fw-bolder">Operational Hours:</span>
        <br />
        <span class="fw-bolder">Monday - Friday:</span> 9:00 AM - 5:00 PM
        <br />
        <span class="fw-bolder">Saturday - Sunday:</span> Closed
      </span>
    </div>

    <!-- Google Map -->
    <div class="col-12 col-lg-6 mt-4">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3983.1714728631136!2d117.57591450000001!3d3.3077237999999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32138bbb396b3b1b%3A0xcb912708c710f1c6!2sPT.%20SSN%20H.%20Nur%20Hasan!5e0!3m2!1sen!2sid!4v1694189215122!5m2!1sen!2sid"
